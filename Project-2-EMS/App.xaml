<Application x:Class="Project_2_EMS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Project_2_EMS.Views"
             xmlns:controls="clr-namespace:Project_2_EMS.Controls.ViewControls"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnLastWindowClose">
  
    <Application.Resources>
        <!-- Login Views -->
        <DataTemplate DataType="{x:Type controls:PatientLoginViewControl}">
            <views:PatientLoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type controls:StaffLoginViewControl}">
            <views:StaffLoginView/>
        </DataTemplate>

        <!-- User Views -->
        <DataTemplate DataType="{x:Type controls:ReceptionistCalendarViewControl}">
            <views:ReceptionistCalendarView/>
        </DataTemplate>


        <Style TargetType="Label">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontSize" Value="18"/>
        <!-- One Color Suggestion: #E1E4E8 -->
      </Style>
      <Style TargetType="Grid">
        <Setter Property="Background" Value="#7C7C7C"/>
          <!--  One Color Suggestion: #24292E -->
      </Style>
      <Style TargetType="Button">
        <Setter Property="Background" Value="#85859c"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Style.Resources>
          <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
          </Style>
        </Style.Resources>
      </Style>
    </Application.Resources>
    
</Application>